@model CarAuction.Models.DTO.PictureDto
@{
    ViewData["Title"] = "Select Picture";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Select Picture</h1>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="SelectPicture" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-control">
                <input asp-for="PathPic" class="form-control" />
                <span asp-validation-for="PathPic" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <div class="form-group"style="padding: 10px;">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div style="padding: 10px;">
                    <a href='@Url.Action("Profile", "Account")' class="btn btn-primary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
