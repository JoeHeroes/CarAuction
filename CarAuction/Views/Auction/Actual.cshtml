@model IEnumerable<CarAuction.Models.Vehicle>
@{
    ViewData["Title"] = "Actual";
    var obj = Model.FirstOrDefault();
}

<style>
    .float-container {
        border: 3px solid #fff;
        padding: 20px;
    }

    .float-child {
        width: 50%;
        float: left;
        padding: 20px;
    }
</style>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Actual</h1>
        </div>
    </div>
</div>
<hr />
<div class="float-container">
    <h1>@obj.RegistrationYear @obj.Producer @obj.ModelSpecifer</h1>
    <div class="float-child">
        <img src="~/Images/@obj.ProfileImg" width="400" height="300" asp-append-version="true" />

        <table>
            <tr>
                <th>Lot #@obj.Id</th>
            </tr>

            <tr>
                <td>Location:</td>
                <td>@obj.BidStatus</td>
            </tr>

            <tr>
                <td>Meter Readout:</td>
                <td>@obj.MeterReadout</td>
            </tr>

            <tr>
                <td>Primary Damage:</td>
                <td>@obj.PrimaryDamage</td>
            </tr>


            <tr>
                <td>Secondary Damage:</td>
                <td>@obj.SecondaryDamage</td>
            </tr>


            <tr>
                <td>Highlights:</td>
                <td>@obj.Highlights</td>
            </tr>


            <tr>
                <td>VIN:</td>
                <td>@obj.VIN</td>
            </tr>


            <tr>
                <td>Body Style:</td>
                <td>@obj.BodyType</td>
            </tr>

            <tr>
                <td>Color:</td>
                <td>@obj.Color</td>
            </tr>

            <tr>
                <td>Engine Capacity:</td>
                <td>@obj.EngineCapacity</td>
            </tr>


            <tr>
                <td>Drive:</td>
                <td>@obj.Drive</td>
            </tr>


            <tr>
                <td>Fuel:</td>
                <td>@obj.Fuel</td>
            </tr>
        </table>
        <br />
        <br />
        <br />
        <br />
            
        
    </div>

    <div class="float-child">
            <table class="table table-bordered table-striped">
                <tbody>
                    @foreach (var objList in Model)
                    {
                        <tr>
                            <td width="20%">
                                <a href="@Url.Action("Lot", "Vehicle", new { lotNumber =  @objList.Id }, null)" title=@objList.ModelSpecifer class="links">
                                    <img src='@Url.Content("~/Images/"+ @objList.ProfileImg)' width="160" height="110" asp-append-version="true">
                                </a>
                            </td>

                            <td width="50%">
                                <b>@objList.RegistrationYear  @objList.Producer  @objList.ModelSpecifer</b>
                                <br />
                                <div class="text-primary">Lot:@objList.Id</div>
                                <br />
                                Odo: <b>@objList.MeterReadout</b>
                            </td>

                            <td width="20%">
                                Current Bid:<b>@objList.CurrentBid</b>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        </div>
</div>
<br />
<br />
