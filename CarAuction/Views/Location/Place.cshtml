@model Location
@{
    ViewData["Title"] = "Place";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">@Model.City</h1>
        </div>
    </div>
</div>
<hr />
<br />
<div class="row">

    <div class="col-md-4">
        <img src="~/Images/@Model.ProfileImg" width="600" height="350" asp-append-version="true" />
    </div>
    <div class="col-md-2">
    </div>
    <br />
    <div class="col-md-2">
        <h5><i class="fa fa-phone"></i> Phone:</h5>
        <p>@Model.Phone</p>
        <br />
        <h5><i class="fa fa-clock-o"></i> Hours:</h5>
        <p>Monday - Friday</p>
        <p>09:00 - 17:00</p>
        <br />
        <h5><i class="fa fa-envelope"></i> Email:</h5>
        <p>@Model.Email</p>

    </div>
    <br />
    <div class="col-md-2">
        <h5><i class="fa fa-home"></i> Physical Address:</h5>

        <p>@Model.Street</p>
        <p>@Model.City, @Model.PostalCode</p>
        <br /><br /><br />
        <h5><i class="fa fa-envelope"></i> Mailing Address:</h5>
        <p>@Model.Street</p>
        <p>@Model.City, @Model.PostalCode</p>
    </div>
</div>