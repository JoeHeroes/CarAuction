@model Location
@{
    ViewData["Title"] = "Place";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">@Model.City</h1>
        </div>
    </div>
</div>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/Images/@Model.ProfileImg" width="350" height="350" asp-append-version="true" />
        <p>
            Copart Finland Premium and Basic Members may preview vehicles at @Model.City yard between 9-16 on weekdays. Guest Members may also preview vehicles between 9-16 on weekdays by paying Guest fee according to the price list.
        </p>
    </div>
    <div class="col-md-4">
        <h5><i class="fa fa-phone"></i> Phone:</h5>
        <p>@Model.Phone</p>

        <h5><i class="fa fa-clock-o"></i> Hours:</h5>
        <p>Monday - Friday</p>
        <p>09:00 - 17:00</p>

        <h5><i class="fa fa-envelope"></i> Email:</h5>
        <p>@Model.Email</p>

    </div>
    <div class="col-md-4">
        <h5><i class="fa fa-home"></i> Physical Address:</h5>

        <p>@Model.Street</p>
        <p>@Model.City, @Model.PostalCode</p>

        <h5><i class="fa fa-envelope"></i> Mailing Address:</h5>
        <p>@Model.Street</p>
        <p>@Model.City, @Model.PostalCode</p>
    </div>
</div>