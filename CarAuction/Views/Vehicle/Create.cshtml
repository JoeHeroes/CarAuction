@model CarAuction.Models.DTO.CreateVehicleDto

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Create a Vehicle</h1>
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <form method="post" action="@Url.Action("VehicleCreate", "Vehicle")" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Producer" class="control-label"></label>
                    <select asp-for="Producer" asp-items="Model.ProducerSelectList" class="form-select"></select>
                    <span asp-validation-for="Producer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModelSpecifer" class="control-label"></label>
                    <input asp-for="ModelSpecifer" class="form-control" placeholder="--Select Model--"/>
                    <span asp-validation-for="ModelSpecifer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModelGeneration" class="control-label"></label>
                    <input asp-for="ModelGeneration" class="form-control" placeholder="--Select Generation--" />
                    <span asp-validation-for="ModelGeneration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegistrationYear" class="control-label"></label>
                    <select asp-for="RegistrationYear" asp-items="Model.RegistrationYearSelectList" class="form-select"></select>
                    <span asp-validation-for="RegistrationYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <select asp-for="Color" class="form-select">
                        <option value="yellow">Yellow</option>
                        <option value="white">White</option>
                        <option value="red">Red</option>
                        <option value="purple">Purple</option>
                        <option value="orange">Orange</option>
                        <option value="pink">Pink</option>
                        <option value="ocher">Ocher</option>
                        <option value="maroon">Maroon</option>
                        <option value="green">Green</option>
                        <option value="gray">Gray</option>
                        <option value="gold">Gold</option>
                        <option value="brown">Brown</option>
                        <option value="blue">Blue</option>
                        <option value="black">Black</option>
                        <option value="beige">Beige</option>


                    </select>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BodyType" class="control-label"></label>
                    <select asp-for="BodyType" asp-items="Model.BodyTypeSelectList" class="form-select"></select>
                    <span asp-validation-for="BodyType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Transmission" class="control-label"></label>
                    <select asp-for="Transmission" asp-items="Model.TransmissionSelectList" class="form-select"></select>
                    <span asp-validation-for="Transmission" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Drive" class="control-label"></label>
                    <select asp-for="Drive" asp-items="Model.DriveSelectList" class="form-select"></select>
                    <span asp-validation-for="Drive" class="text-danger"></span>
                </div>



            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MeterReadout" class="control-label"></label>
                    <input asp-for="MeterReadout" class="form-control" />
                    <span asp-validation-for="MeterReadout" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fuel" class="control-label"></label>
                    <select asp-for="Fuel" asp-items="Model.FuelSelectList" class="form-select"></select>
                    <span asp-validation-for="Fuel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrimaryDamage" class="control-label"></label>
                    <select asp-for="PrimaryDamage" asp-items="Model.DamageSelectList" class="form-select"></select>
                    <span asp-validation-for="PrimaryDamage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondaryDamage" class="control-label"></label>
                    <select asp-for="SecondaryDamage" asp-items="Model.DamageSelectList" class="form-select"></select>
                    <span asp-validation-for="SecondaryDamage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VIN" class="control-label"></label>
                    <input asp-for="VIN" class="form-control" />
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>
                <br />
                <div class="form-control">
                    <label asp-for="PathPic" class="control-label"></label>
                    <input asp-for="PathPic" class="form-control" />
                    <span asp-validation-for="PathPic" class="text-danger"></span>
                </div>
                <br />
                <div class="form-control">
                    <label asp-for="DateTime" class="control-label"></label>
                    <input asp-for="DateTime" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

</div>


<br />
<br />