@model CarAuction.Models.DTO.EditVehicleDto

@{
    ViewData["Title"] = "Vehicle Edit";
    var minDate = DateTime.Now.ToString("yyyy-MM-dd");
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Edit Vehicle</h2>
        </div>
    </div>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="@Url.Action("EditVehicle", "Vehicle")">
            @ViewBag.msg
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RegistrationYear" class="control-label"></label>
                <select asp-for="RegistrationYear" asp-items="Model.RegistrationYearSelectList" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select asp-for="Color" class="form-select">
                    <option value="">Select Color</option>
                    <option value="Yellow">Yellow</option>
                    <option value="White">White</option>
                    <option value="Red">Red</option>
                    <option value="Purple">Purple</option>
                    <option value="Orange">Orange</option>
                    <option value="Pink">Pink</option>
                    <option value="Ocher">Ocher</option>
                    <option value="Maroon">Maroon</option>
                    <option value="Green">Green</option>
                    <option value="Gray">Gray</option>
                    <option value="Gold">Gold</option>
                    <option value="Brown">Brown</option>
                    <option value="Blue">Blue</option>
                    <option value="Black">Black</option>
                    <option value="Beige">Beige</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="BodyType" class="control-label"></label>
                <select asp-for="BodyType" asp-items="Model.BodyTypeSelectList" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="Transmission" class="control-label"></label>
                <select asp-for="Transmission" asp-items="Model.TransmissionSelectList" class="form-select"></select>
            </div>
             <div class="form-group">
                 <label asp-for="Location" class="control-label"></label>
                 <select asp-for="Location" asp-items="Model.LocationSelectList" class="form-select"></select>
             </div>
             <div class="form-group">
                 <label asp-for="Fuel" class="control-label"></label>
                 <select asp-for="Fuel" asp-items="Model.FuelSelectList" class="form-select"></select>
             </div>               
             <br />
             <div class="form-control">
                 <label asp-for="DateTime" class="control-label"></label>
                 <input asp-for="DateTime" type="date" min=@minDate class="form-control" />
             </div>
            <br />
            <div class="btn-group">
                <div class="form-group" style="padding: 10px;">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div style="padding: 10px;">
                    <a href='@Url.Action("ListVehicle", "Vehicle")' class="btn btn-primary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>



