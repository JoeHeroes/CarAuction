@model IEnumerable<CarAuction.Models.View.VehicleView>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Management Vehicles</h1>
        </div>
    </div>
</div>
<hr />
<p>
    <a href='@Url.Action("AddVehicle", "Vehicle")' class="btn btn-primary">Add Vehicle</a>
</p>
<br />

<table class="table table-bordered table-striped" style="width:100%">


    <thead>
        <tr>
            <th>
                Images
            </th>
            <th>
                Lot
            </th>
            <th>
                Year
            </th>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Sale Date
            </th>
            <th>
                Odometer
            </th>
            <th>
                Damage
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="10%">
                    <a href="@Url.Action("Lot", "Vehicle", new { lotNumber = @obj.LotNumber }, null)" title="@obj.Producer" class="links">
                        <img src='@Url.Content("~/Images/"+@obj.Image)' width="160" height="110" asp-append-version="true">
                    </a>
                </td>
                <td width="22%">
                    @obj.LotNumber
                <td width="8%">
                        @obj.RegistrationYear
                </td>
                <td width="10%">
                        @obj.Producer
                </td>
                <td width="20%">
                        @obj.ModelSpecifer
                </td>
                <td width="20%">
                        @obj.DateTime.ToString("MM/dd/yyyy hh:mm")
                </td>
                <td width="15%">
                        @obj.MeterReadout
                </td>
                <td width="15%">
                        @obj.Damage
                </td>
                <td>
                    <div class="btn-group">
                        <div class="form-group" style="padding: 10px;">
                            <a href='@Url.Action("EditVehicle", "Vehicle", new { id = @obj.LotNumber})' class="btn btn-primary">Edit</a>
                        </div>
                        <div style="padding: 10px;">
                            <a href='@Url.Action("DeleteVehicle", "Vehicle", new { id = @obj.LotNumber})' class="btn btn-primary">Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />
