@model IEnumerable<CarAuction.Models.View.VehicleView>
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Search";


}

<style>
    td{
        text-align:center;
        vertical-align:middle;
    }

    select {
        
    }
</style>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Search Results For: @HttpContextAccessor.HttpContext.Session.GetString("searchBy")</h1>
        </div>
    </div>
</div>
<hr />
<br />




<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Images
            </th>
            <th>
                Lot
            </th>
            <th>
                Year
            </th>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Sale Date
            </th>
            <th>
                Odometer
            </th>
            <th>
                Damage
            </th>
            <th>
                Current Bid
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="10%">
                    <a href="@Url.Action("Lot", "Vehicle", new { lotNumber = @obj.LotNumber }, null)" title="@obj.Producer" class="links">
                        <img src='@Url.Content("~/Images/"+@obj.ProfileImg)' width="160" height="110" asp-append-version="true">
                    </a>
                </td>
                <td width="22%">
                    @obj.LotNumber
                <td width="8%">
                    @obj.RegistrationYear
                </td>
                <td width="10%">
                    @obj.Producer
                </td>
                <td width="20%">
                    @obj.ModelSpecifer
                </td>
                <td width="20%">
                    @obj.DateTime.ToString("MM/dd/yyyy hh:mm")
                </td>
                <td width="15%">
                    @obj.MeterReadout
                </td>
                <td width="15%">
                    @obj.Damage
                </td>
                <td width="20%">
                    @obj.CurrentBid
                </td>
                <td width="15%">
                    <a href='@Url.Action("Lot", "Vehicle", new { lotNumber = @obj.LotNumber })' class="btn btn-secondary my-2 my-sm-0">Bid Now</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" action="@Url.Action("Search", "Vehicle")">
    <div class="row">
        <div class="col-md-1">
            <div class="form-group">
                PageNumber
                <select name="PageNumber" class="form-select">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                </select>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                PageSize
                <select name="PageSize" class="form-select">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                    <option value="25">25</option>
                    <option value="30">30</option>
                </select>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <br />
                <input type="submit" value="Change" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
