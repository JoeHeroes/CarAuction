@model IEnumerable<CarAuction.Entites.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.modelSpecifer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.modelGeneration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.registrationYear)
