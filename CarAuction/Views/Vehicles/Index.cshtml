            </td>
            <td>
                @Html.DisplayFor(modelItem => item.modelGeneration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.registrationYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bodyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.engineCapacity)
